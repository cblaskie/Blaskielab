 ############################
# Pocket ID – REQUIRED
############################

# Public URL where Pocket ID is accessed
# Must EXACTLY match how you access the UI
APP_URL=http://10.69.1.100:1411

# Encryption key for tokens and secrets
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=changeme

############################
# Pocket ID – ADMIN ACCOUNT
############################

# Local Pocket ID admin (NOT LDAP)
POCKETID_ADMIN_EMAIL=admin@theblaskies.com
POCKETID_ADMIN_PASSWORD=changeme

############################
# LDAP (LLDAP) INTEGRATION
############################

# Enable LDAP authentication
LDAP_ENABLED=true

# LDAP connection
LDAP_URL=ldap://lldap:3890
LDAP_BIND_DN=uid=lldap_admin,ou=people,dc=theblaskies,dc=com
LDAP_BIND_PASSWORD=changeme

# LDAP search base
LDAP_BASE=dc=theblaskies,dc=com

# User and group lookup
LDAP_USER_SEARCH_FILTER=(uid={0})
LDAP_USER_GROUP_SEARCH_FILTER=(objectClass=groupOfNames)

# Attribute mappings (LLDAP defaults)
LDAP_ATTRIBUTE_USER_USERNAME=uid
LDAP_ATTRIBUTE_USER_EMAIL=mail
LDAP_ATTRIBUTE_GROUP_MEMBER=member

############################
# RUNTIME / CONTAINER
############################

# Required for correct file ownership
PUID=1000
PGID=1000

# Trust reverse proxy headers (Traefik)
# KEEP FALSE for now – change to true later
TRUST_PROXY=false

############################
# OPTIONAL / SAFE DEFAULTS
############################

# Disable analytics heartbeat
ANALYTICS_DISABLED=true

# Optional GeoIP (safe to leave empty)
MAXMIND_LICENSE_KEY=
