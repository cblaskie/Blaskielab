############################
# ntfy â€“ Core
############################

# Public URL (must match Traefik host)
NTFY_BASE_URL=https://ntfy.theblaskies.com

# Internal listener
NTFY_LISTEN_HTTP=:80

############################
# Authentication & ACL
############################

# Enable user authentication
NTFY_AUTH_FILE=/etc/ntfy/user.db

# Deny everything unless explicitly allowed
NTFY_AUTH_DEFAULT_ACCESS=deny-all

############################
# Persistence
############################

# SQLite message cache
NTFY_CACHE_FILE=/var/cache/ntfy/cache.db

# How long messages are kept
NTFY_CACHE_DURATION=72h

############################
# Rate Limiting
############################

# Burst protection
NTFY_VISITOR_REQUEST_LIMIT_BURST=60
NTFY_VISITOR_REQUEST_LIMIT_REPLENISH=10s

############################
# Attachments (optional)
############################

NTFY_ATTACHMENT_CACHE_DIR=/var/cache/ntfy/attachments
NTFY_ATTACHMENT_TOTAL_SIZE_LIMIT=5G
NTFY_ATTACHMENT_FILE_SIZE_LIMIT=50M

############################
# Metrics (optional)
############################

# Prometheus metrics endpoint
NTFY_METRICS_LISTEN_HTTP=:9090
