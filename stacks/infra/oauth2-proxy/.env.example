# oauth2-proxy â€“ OIDC (Pocket-ID)
############################

# --- Provider ---
# OIDC issuer URL (Pocket-ID)
OAUTH2_PROXY_PROVIDER=oidc
OAUTH2_PROXY_OIDC_ISSUER_URL=https://id.example.com

# OAuth client registered in Pocket-ID
OAUTH2_PROXY_CLIENT_ID=oauth2-proxy
OAUTH2_PROXY_CLIENT_SECRET=CHANGE_ME

############################
# Redirect / Domains
############################

# Public URL for oauth2-proxy callback
OAUTH2_PROXY_REDIRECT_URL=https://auth.example.com/oauth2/callback

# Cookie domain shared across subdomains
OAUTH2_PROXY_COOKIE_DOMAIN=.example.com

# Domains allowed to receive auth cookies
OAUTH2_PROXY_WHITELIST_DOMAINS=.example.com

############################
# Session / Cookies
############################

# 32-byte base64 secret
# Generate with:
#   openssl rand -base64 32
OAUTH2_PROXY_COOKIE_SECRET=CHANGE_ME

# Cookie security
OAUTH2_PROXY_COOKIE_SECU_
