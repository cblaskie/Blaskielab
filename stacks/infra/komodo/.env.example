# Example environment file
# Copy to `.env` and fill in real values
########################################


########################################
# MongoDB (EXTERNAL STACK)
########################################

# MongoDB user created manually in the mongo stack
KOMODO_DB_USERNAME=komodo
KOMODO_DB_PASSWORD=change-me


########################################
# Komodo Core
########################################

# Host / port the Core binds to INSIDE the container
# (Traefik or port mapping handles external access)
KOMODO_HOST=0.0.0.0
KOMODO_PORT=9120

# Logging level: trace | debug | info | warn | error
KOMODO_LOG_LEVEL=info

# Used to sign session tokens
KOMODO_JWT_SECRET=change-me


########################################
# Komodo Core <-> Periphery Security
########################################

# Shared secret between Core and Periphery
# MUST be the same in both containers
KOMODO_PASSKEY=change-me


########################################
# Komodo Periphery
########################################

# Root directory for the Periphery agent
# MUST be identical inside and outside the container
PERIPHERY_ROOT_DIRECTORY=/etc/komodo


########################################
# General
########################################

TZ=America/New_York

########################################
# Redis  
########################################

KOMODO_REDIS_ADDRESS=redis:6379
KOMODO_REDIS_PASSWORD=
KOMODO_REDIS_DB=0
