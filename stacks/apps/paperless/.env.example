############################
# Core
############################
PAPERLESS_URL=https://paperless.theblaskies.com
PAPERLESS_TIME_ZONE=America/New_York
PAPERLESS_SECRET_KEY=changeme-super-secret

############################
# Admin Bootstrap
############################
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_PASSWORD=changeme
PAPERLESS_ADMIN_EMAIL=admin@theblaskies.com

############################
# External Postgres
############################
PAPERLESS_DBHOST=postgres
PAPERLESS_DBPORT=5432
PAPERLESS_DBNAME=paperless
PAPERLESS_DBUSER=paperless
PAPERLESS_DBPASS=changeme-db-password

############################
# Redis
############################
PAPERLESS_REDIS=redis://paperless-redis:6379

############################
# OCR / Ingest
############################
PAPERLESS_OCR_LANGUAGE=eng
PAPERLESS_CONSUMER_RECURSIVE=true
PAPERLESS_CONSUMER_SUBDIRS_AS_TAGS=true
PAPERLESS_FILENAME_FORMAT={created_year}/{correspondent}/{title}

############################
# Paperless-AI (OpenAI)
############################
PAPERLESS_AI_ENABLED=true
PAPERLESS_AI_PROVIDER=openai
PAPERLESS_AI_OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxx
PAPERLESS_AI_MODEL=gpt-4o-mini
PAPERLESS_AI_AUTO_TAG=true
PAPERLESS_AI_AUTO_CORRESPONDENT=true
PAPERLESS_AI_AUTO_DOCUMENT_TYPE=true
PAPERLESS_AI_AUTO_TITLE=true

############################
# Performance
############################
PAPERLESS_TASK_WORKERS=2
PAPERLESS_THREADS_PER_WORKER=2